@model List<InvoiceViewModel>

<h1>Approved Claims Invoice</h1>
<p>Report Generated On: @Model.FirstOrDefault()?.ReportDate.ToShortDateString()</p>
<p>Generated By: @Model.FirstOrDefault()?.ReportGeneratedBy</p>

<a href="@Url.Action("DownloadInvoicePdf", "Claims")" class="btn btn-primary">Download PDF</a>

<table class="table">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Amount</th>
            <th>Claim Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.TotalAmount</td>
                <td>@claim.ClaimDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

<h3>Grand Total: @Model.FirstOrDefault()?.GrandTotal.ToString("R")</h3>

