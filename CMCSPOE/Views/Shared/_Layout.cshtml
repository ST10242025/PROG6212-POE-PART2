<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMCS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <!-- Navbar with better accessibility and structure -->
        <nav class="navbar navbar-expand-sm navbar-custom" role="navigation" aria-label="Main Navigation">
            <div class="container-fluid">
                <!-- Logo link to home page -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="CMCS System Logo" />
                </a>

                <!-- System name link to home page -->
                <a class="sysname" asp-area="" asp-controller="Home" asp-action="Index">
                    EduFlex Contracts
                </a>

                <!-- Navbar items for mobile view -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Collapsible navbar content -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <!-- Submit a Claim page button -->
                        <li class="nav-item">
                            <a class="btn" asp-area="" asp-controller="Claims" asp-action="Create">Submit a Claim</a>
                        </li>
                        <!-- Contact Us page button -->
                        <li class="nav-item">
                            <a class="btn" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                        <!-- Claims page button -->
                        <li class="nav-item">
                            <a class="btn" asp-area="" asp-controller="Claims" asp-action="ViewClaims">Claims</a>
                        </li>
                        @if (User.IsInRole("Programme Coordinator") || User.IsInRole("Academic Manager") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="btn" asp-controller="Claims" asp-action="AdminDashboard">Verify Claims</a>
                            </li>
                            
                            <li class="nav-item">
                                <a class="btn" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
                            </li>
                        }
                         @if (User.IsInRole("HR"))
                        {
                            <li class="nav-item">
                                <a class="btn" asp-controller="Claims" asp-action="AdminDashboard">Admin Dashboard</a>
                            </li>
                            
                            <li class="nav-item">
                                <a class="btn" asp-area="" asp-controller="Claims" asp-action="GenerateInvoice">Generate Invoice</a>
                            </li>
                                <li class="nav-item">
                                        <a class="btn" asp-controller="Claims" asp-action="VerifyClaimsHR">Verify Claims</a>
                                </li>

                                <li class="nav-item">
                                    <a class="btn" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
                                </li>
                        }
                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2024 - CMCS -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> |
            <a asp-area="" asp-controller="Home" asp-action="AboutUS">About Us</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.5/additional-methods.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
