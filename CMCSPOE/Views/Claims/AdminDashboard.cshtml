@model IEnumerable<Claims>

<h2>Programme Coordinators and Academic Managers review claims</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Claim Date</th> 
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Name</td>
                <td>@claim.Surname</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.ClaimDate.ToString("yyyy-MM-dd")</td>               
                <td>
                    <form asp-action="ApproveClaim" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@claim.Id" />
                        <button class="btn btn-success">Approve</button>
                    </form>
                    <form asp-action="RejectClaim" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@claim.Id" />
                        <button class="btn btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
