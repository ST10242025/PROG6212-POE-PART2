@model IEnumerable<CMCSPOE.Models.Claims>

@{
    ViewData["Title"] = "Verify Claims";
}

<h2>Verify Claims</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total</th>
            <th>Claim Date</th>
            <th>Status</th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Name</td>
                <td>@claim.Surname</td>
                <td>@claim.Email</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.Total</td>
                <td>@claim.Notes</td>
                <td>@claim.ClaimDate.ToString("yyyy-MM-dd")</td>
                <td>@claim.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@claim.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Approve" asp-route-id="@claim.Id" class="btn btn-success btn-sm">Approve</a>
                    <a asp-action="Reject" asp-route-id="@claim.Id" class="btn btn-danger btn-sm">Reject</a>
                </td>
            </tr>
        }
    </tbody>
</table>
